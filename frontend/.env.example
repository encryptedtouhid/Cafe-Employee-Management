# API URL - Backend service endpoint
VITE_API_URL=http://localhost:3000

# Environment mode (development, production, test)
NODE_ENV=development

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable/disable mock API for development
VITE_USE_MOCK_API=false

# Feature flags
VITE_FEATURE_FILE_UPLOAD=true
VITE_FEATURE_EMPLOYEE_FILTER=false

# Application version
VITE_APP_VERSION=1.0.0

# Optional: Analytics tracking ID (if using analytics)
# VITE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Optional: Sentry DSN (if using error tracking)
# VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxx